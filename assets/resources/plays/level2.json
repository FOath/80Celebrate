    {
      "op": "dialog-switch",
      "content": {
        "id": 1,
        "state": true
      }
    },
    {
      "op": "actor1-appear",
      "content": {
        "url": "actors/actor_man",
        "posX": -700,
        "posY": -140
      }
    },
    {
      "op": "actor2-appear",
